<div class="card mt-5">
    <div class="card-body">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="card-title"><%= @task.title %></h2>

            <%= link_to 'Edit this task', edit_path, class: "btn btn-dark align-items-center" %>

        </div>
        <h5 class="card-text"><%= @task.details %></h5>

        <hr>


        <% if @task.completed == true %>
        <p class="card-text">This task is completed</p>
        <% else %>
        <p class="card-text">This task is not yet completed</p>
        <% end %>

    </div>
</div>

<hr>

<%= link_to 'Back to Tasks', tasks_path %>